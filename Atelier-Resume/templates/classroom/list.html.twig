<h1>Classrooms List</h1>
<table border="3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for classroom in classrooms %}
            <tr>
                <td>{{ classroom.id }}</td>
                <td>{{ classroom.name }}</td>
                <td>
                    <a href="{{ path('update_classroom', {'id': classroom.id}) }}">Edit</a>
                    <a href="{{ path('delete_classroom', {'id': classroom.id}) }}">Delete</a>
            </tr>
        {% endfor %}
    </tbody>
</table>    